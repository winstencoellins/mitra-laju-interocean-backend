generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

generator prismabox { 
  provider = "prismabox"
  typeboxImportDependencyName = "elysia"
  typeboxImportVariableName = "t"
  inputModel = true
  output   = "../generated/prismabox"
} 

datasource db {
  provider = "postgresql"
}

model Port {
  id          String      @id @default(uuid())

  portName    String
  portCountry String

  isActive    Boolean  @default(true)
  createdBy   String
  updatedBy   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Vessel {
  id            String      @id @default(uuid())
  vesselName    String
  voyageNumber  String
  etd           DateTime?
  closingReefer DateTime?

  isActive      Boolean     @default(true)
  createdBy     String
  updatedBy     String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Customer {
  id            String      @id @default(uuid())
  customerCode  String      @unique
  customerName  String
  npwp          String?

  isActive      Boolean  @default(true)
  createdBy     String
  updatedBy     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  customerLocations CustomerLocation[]
}

model CustomerLocation {
  id              String      @id @default(uuid())
  addressLine1    String
  addressLine2    String?
  addressLine3    String?
  city            String
  province        String
  country         String
  postalCode      String?

  isActive        Boolean  @default(true)
  createdBy       String
  updatedBy       String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  customerId      String
  customer        Customer  @relation(fields: [customerId], references: [id])

  customerContacts CustomerContact[]
}

model CustomerContact {
  id            String      @id @default(uuid())
  contactName   String
  phoneNumber   String
  email         String?

  isActive      Boolean  @default(true)
  createdBy     String
  updatedBy     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  customerLocationId String
  customerLocation   CustomerLocation @relation(fields: [customerLocationId], references: [id])
}

model Vendor {
  id            String      @id @default(uuid())
  vendorCode    String      @unique
  vendorName    String
  npwp          String?

  isActive      Boolean  @default(true)
  createdBy     String
  updatedBy     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  vendorLocations VendorLocation[]
}

model VendorLocation {
  id              String      @id @default(uuid())
  addressLine1    String
  addressLine2    String?
  addressLine3    String?
  city            String
  province        String
  country         String
  postalCode      String?

  isActive        Boolean  @default(true)
  createdBy       String
  updatedBy       String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  vendorId        String
  vendor          Vendor  @relation(fields: [vendorId], references: [id])

  vendorContacts VendorContact[]
}

model VendorContact {
  id            String      @id @default(uuid())
  contactName   String
  phoneNumber   String
  email         String?

  isActive      Boolean  @default(true)
  createdBy     String
  updatedBy     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  vendorLocationId String
  vendorLocation   VendorLocation @relation(fields: [vendorLocationId], references: [id])
}